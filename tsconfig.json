{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./node_modules/**/*"
    ],
    "files": [
        "./app/scripts/app.ts",
        "./app/scripts/typings/angular2/angular2.d.ts",
        "./app/scripts/typings/es6-promise/es6-promise.d.ts",
        "./app/scripts/typings/rx/rx-lite.d.ts",
        "./app/scripts/typings/rx/rx.d.ts"
    ]
}
